

(defwidget date []
  (box
    :class "status"
    :space-evenly false
    (---)
    (label :text "${month-name} ${day}" :truncate false)
  )
)

(defwidget jp_date []
  (box
    :class "status"
    :space-evenly false
    (---)
    (label :text month)
    (label :text "月" :class "status_jp")
    (label :text day)
    (label :text "日" :class "status_jp")
  )
)

(defwidget en_date []
  (box
    :class "status"
    :space-evenly false
    (---)
    (label :text "${weekday}, ${month-name} ${day}")
    (label :text {
      day == 3 || day == 13 ||  day ==23 ? "rd" :
      day == 2 || day == 22 ? "nd" :
      day == 1 || day == 21 || day == 31 ? "st" : "th"}
    )
  )
)
