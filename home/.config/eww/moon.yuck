(defpoll moonphase :interval "10s" "bash ~/.config/eww/scripts/moon.sh")

(defwidget moon []
  (box  :class "status"
        :orientation "h"
        :space-evenly false
        :tooltip "moonphase"
        :halign "end"
    (---)
    (label  :text moonphase
            :class "moon"
            :style "color: #f8e2a0; font-size: 20px;"
    )
  )
)
