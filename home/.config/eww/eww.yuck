(include "time.yuck")
(include "date.yuck")
(include "sunclock.yuck")
;;(include "battery.yuck")
(include "separator.yuck")
(include "ram.yuck")
(include "volume.yuck")
(include "phones.yuck")
(include "moon.yuck")
(include "battery-bar.yuck")
(include "resize.yuck")
(include "workspaces.yuck")

(defwindow topbar
  :monitor 0
  :geometry (geometry
    :x "0px"
    :y "0px"
    :width "100%"
    :height "1%"
    :anchor "top center")
  :stacking "fg"
  :exclusive true
  :focusable false
  (topstatus)
)

(defwindow bottombar
  :monitor 0
  :geometry (geometry
    :x "0px"
    :y "0px"
    :width "100%"
    :height "8px"
    :anchor "bottom center")
  :stacking "fg"
  :exclusive true
  :focusable false
  (bottom-status)
)

(defwidget topstatus []
  (box
    :class "bar"
    (top-left)
    (top-center)
    (top-right)

  )
)

(defwidget bottom-status []
  (box
    :class "bar"
    (bottom-right)
  )
)


(defwidget top-right []
  (box
    :class "status"
    :space-evenly false
    :halign "end"
    (phones)
    (RAM)
    (vol)
    (sunclock)
    (moon)
    (date)
    (time)
  )
)

(defwidget top-left []
  (box
    :class "status"
    :space-evenly false
    :halign "start"
    (workspaces)
    (resize)
  )
)

(defwidget top-center []
  (box
    :class "status"
    :space-evenly false
    :halign "center"
      (label :text "")
  )
)

(defwidget bottom-right []
  (box
    :class "status"
    :space-evenly false
    :halign "end"
    :valign "center"
    ;;(phones)
    (battery)
  )
)
