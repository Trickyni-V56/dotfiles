(defpoll sunset :interval "10s" "~/.shells/suntime.sh || echo night")

(defwidget sunclock []
  (box
    :visible {sunset != "night"}
    :class "status"
    :space-evenly false
    :tooltip "time till sunset"
    :orientation "h"
    (---)
    (label :text "󰖚" :class "icon")
    (image :path "icons/sun-horizon-fill.svg"
           :image-width 18
           :fill-svg "#E68D53")
    (label :text "󰖚" :class "phosphor-icon")

    (label :text sunset :class "status"
    )
  )
)
