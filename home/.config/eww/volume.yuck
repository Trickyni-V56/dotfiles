(defwidget vol []
  (box
    :class "status"
    :space-evenly false
    (---)
    (label  :class "topbar icon"
            :text {volume == 0 || mute ? "" :
                   volume < 39 ? "" :
                   volume < 59 ? "" : "" }
            :style {volume == 0 || mute ? "color: #E86045;" : ""})
    (revealer :transition "slideleft"
              :reveal {mute == "false"}
      (label :text "${volume}%")
    )
  )
)
