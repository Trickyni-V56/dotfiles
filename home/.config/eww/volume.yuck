(defpoll volume :interval "100ms" "qalc -t $(wpctl get-volume @DEFAULT_AUDIO_SINK@ | cut -d' ' -f2) to percent")

(defwidget vol []
  (box
    :class "status"
    :orientation "h"
    :space-evenly false
    :halign "end"
    (---)
    (label :class "icon" :text "ï€¨")
    (label
        :text "${volume}")
  )
)

