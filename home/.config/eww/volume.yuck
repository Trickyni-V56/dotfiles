(defpoll volume :interval "100ms" "qalc -t $(wpctl get-volume @DEFAULT_AUDIO_SINK@ | cut -d' ' -f2) to percent | tr -d '%' ")

(defwidget vol []
  (box
    :class "status"
    :space-evenly false
    (---)
    (label  :class "icon"
            :text {volume == 0 ? "" :
                   volume < 39 ? "" :
                   volume < 59 ? "" : "" }
            :style {volume == 0 ? "color: #E86045;" : ""})
    (label
        :text "${volume}%")
  )
)
