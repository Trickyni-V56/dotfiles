#
# Status Bar:
#
# Read `man 5 sway-bar` for more information about this section.
bar {
    position top
	font "ProggyCleanSZNerdFontMono 16"
	separator_symbol |
    # When the status_command prints a new line to stdout, swaybar updates.
    # The default just shows the current date and time.
    status_command while date +'%Y-%m-%d %X'; do sleep 1; done

    colors {
        statusline #AFD2E9
        background #3b3228
        inactive_workspace #32323200 #32323200 #C1A387
        #focused_background #E68D53
        separator #C1A387
        focused_workspace #C1A387 #E68D53 #3b3228
        inactive_workspace #3b3228 #3b3228 #AFD2E9
    }

    clock {
    	
    }
}
